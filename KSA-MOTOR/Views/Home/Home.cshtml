@model BusinessLayer.PartsInventory
@using BusinessLayer
@{
    ViewBag.Title = "Home";
}

<div class="">
    <div id="carouselExampleIndicators" class="carousel slide full-carousel" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {  @Html.AntiForgeryToken()
            <div class="inputs-wrapper-header d-flex font-weight-bolder text-white">
                SELECT YOUR VEHICLE
            </div>
            <div class="inputs-wrapper d-flex">
                @Html.DropDownListFor(m => m.selctedCarBrands, Model.GetVehivclesList.Select(x => new SelectListItem
           {
               Text = x.Make,
               Value = x.Id.ToString()
           }), "Make", new { @class = "search-text-box", onchange = "this.form.submit();",  style = "border-color:yellow" })
                @Html.DropDownListFor(m => m.selctedCarModel, Model.GetModelList.Select(x => new SelectListItem
           {
               Text = x.Model,
               Value = x.Id.ToString()
           }), "Model", new { @class = "search-text-box", onchange = "this.form.submit();", id = "NID", name="NID", style = " border-color:yellow" })


                @Html.DropDownListFor(m => m.selectedYear, (IEnumerable<SelectListItem>)ViewBag.Years, "Year", new { @class = "search-text-box", onchange = "this.form.submit();", @multipleclass = "chosen-select", id = "DDL2", style = " border-color:yellow" })

              
                @Ajax.ActionLink("Search ", "Index", "Search", new { NID = Convert.ToInt32(Model.selctedCarModel), id = Convert.ToInt32(Model.selctedCarBrands), YID = Model.selectedYear },
                          new AjaxOptions
                          {
                              HttpMethod = "", // HttpMethod to use, GET or POST
                              UpdateTargetId = "Cardd", // ID of the HTML element to update
                              InsertionMode = InsertionMode.Replace // Replace the existing contents
                          }, new { @class = "search-button btn btn-block btn-danger text-center" })
            </div>
        }

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/backgg.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/b2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/b3.jpg" alt="Third slide">
                </div>
            </div>
            @*<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>*@
        </div>
</div>
<div class="container">
    <div class="d-flex pt-5">
        <div class="flex-grow-1 bg-primary"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-secondary"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-info"><h2>Company Logo</h2></div>
    </div>
    <div class="d-flex pt-5">
        <div class="flex-grow-1 bg-secondary"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-primary"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-info"><h2>Company Logo</h2></div>
    </div>
    <div class="d-flex pt-5">
        <div class="flex-grow-1 bg-info"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-secondary"><h2>Company Logo</h2></div>
        <div class="flex-grow-1 bg-primary"><h2>Company Logo</h2></div>
    </div>
</div>
