@model IEnumerable<BusinessLayer.PartsInventory>
@{
    ViewBag.Title = "Search";
}

<div class="text-primary card shadow-sm p-2">Found @Model.Count() results for "searchtext"</div>
<div class="container-fluid mt-2 border p-2">
 
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-4">
                <img src="@Url.Content(item.ImagePath)" style="max-height:400px; width:90%" />
            </div>

            <div class="col-8">
                <h4>  @Html.ActionLink("" + item.Name + "-" + item.Description + "", "index", "Product", new {  id = item.PartID }, null)</h4>
               
                <div>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star fa-star-half-full"></span>
                    <span class="fa fa-star fa-star-o"></span>
                    <span class="pl-1 text-info"> from 1,504 reviews</span>
                </div>
                <div><span class="fa fa-usd"></span> @Html.DisplayFor(modelItem => item.SalePrice)</div>
            </div>
        </div>
        <hr />
    }





</div>
